@model SistemaCadastroLocais_Web.Models.TB_PontosTuristicos
@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

<h3 class="text-danger">Deseja remover este ponto?</h3>

<div>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.LocaisId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LocaisId, new { @class = "form-control", @disable = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @disable = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Endereco, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control", @disable = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Cidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", @disable = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Estado, new { @class = "form-control", @disable = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Pais, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Pais, new { @class = "form-control", @disable = "disabled" })
            </div>
        </div>


        @using (Html.BeginForm("DeleteConfirmed", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
           @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.LocaisId)

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h1>@Model.LocaisId</h1>
                    @Html.ActionLink("Return", "Index", null, new { @class = "btn btn-primary" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>

        }

    </div>
</div>